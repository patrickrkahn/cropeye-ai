modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smart Farming Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test Video"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smart Farming Demo VNC"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smart Farming Streamlit"

[[workflows.workflow]]
name = "Smart Farming Demo"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python smart_farming.py"

[[workflows.workflow]]
name = "Create Test Video"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_test_video.py && python smart_farming.py"

[[workflows.workflow]]
name = "Smart Farming Demo VNC"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "DISPLAY=:0 python smart_farming.py"

[[workflows.workflow]]
name = "Smart Farming Streamlit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_app.py --server.address 0.0.0.0 --server.port 8501"
waitForPort = 8501

[deployment]
run = ["sh", "-c", "DISPLAY=:0 python smart_farming.py"]

[[ports]]
localPort = 8501
externalPort = 80
